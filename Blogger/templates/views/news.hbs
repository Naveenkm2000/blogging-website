                                                    alt="news2">
                                            </a>
                                        </div>
                                        <div class="position-absolute p-2 p-lg-3 b-0 w-100 bg-shadow">
                                            <!-- category -->
                                            <a class="p-1 badge badge-primary rounded-0"
                                                href="#badge">Lifestyle</a>

                                            <!--title-->
                                            <a href={{link2}}>
                                                <h2 class="h5 text-white my-1">{{msg2}}</h2>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!--news box-->
                            <div class="col-6 pb-1 pl-1 pt-0">
                                <div class="card border-0 rounded-0 text-white overflow zoom">
                                    <div class="position-relative">
                                        <!--thumbnail img-->
                                        <div class="ratio_right-cover-2 image-wrapper">
                                            <a href={{link3}}>
                                                <img class="img-fluid" src={{img3}}
                                                    alt="news3">
                                            </a>
                                        </div>
                                        <div class="position-absolute p-2 p-lg-3 b-0 w-100 bg-shadow">
                                            <!-- category -->
                                            <a class="p-1 badge badge-primary rounded-0"
                                                href="#two">Motocross</a>
                                            <!--title-->
                                            <a href={{link3}}>
                                                <h2 class="h5 text-white my-1">{{msg3}}</h2>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!--news box-->
                            <div class="col-6 pb-1 pr-1 pt-1">
                                <div class="card border-0 rounded-0 text-white overflow zoom">
                                    <div class="position-relative">
                                        <!--thumbnail img-->
                                        <div class="ratio_right-cover-2 image-wrapper">
                                            <a href={{link4}}>
                                                <img class="img-fluid" src={{img4}}
                                                    alt="bootstrap blog wordpress theme">
                                            </a>
                                        </div>
                                        <div class="position-absolute p-2 p-lg-3 b-0 w-100 bg-shadow">
                                            <!-- category -->
                                            <a class="p-1 badge badge-primary rounded-0"
                                                href="#temp">Fitness</a>
                                            <!--title-->
                                            <a href={{link4}}>
                                                <h2 class="h5 text-white my-1">{{msg4}}</h2>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!--news box-->
                            <div class="col-6 pb-1 pl-1 pt-1">
                                <div class="card border-0 rounded-0 text-white overflow zoom">
                                    <div class="position-relative">
                                        <!--thumbnail img-->
                                        <div class="ratio_right-cover-2 image-wrapper">
                                            <a href={{link5}}>
                                                <img class="img-fluid" src={{img5}}
                                                    alt="blog website templates bootstrap">
                                            </a>
                                        </div>
                                        <div class="position-absolute p-2 p-lg-3 b-0 w-100 bg-shadow">
                                            <!-- category -->
                                            <a class="p-1 badge badge-primary rounded-0"
                                                href="#ready">Adventure</a>
                                            <!--title-->
                                            <a href={{link5}}>
                                                <h2 class="h5 text-white my-1">{{msg5}}</h2>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>


                        </div>
                    </div>
                    <!--End box news-->

                </section>
                <!--END SECTION-->
            </div>
        </div>

